{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "---",
  "scripts": {
    "lint": "eslint --ext .ts,.jsx,.tsx src",
    "lint:fix": "eslint --ext .ts,.jsx,.tsx src --fix",
    "dev": "parcel --open --target client --dist-dir build",
    "start": "node ./build/server/index.js",
    "build": "npm run build:client & npm run build:server",
    "build:client": "parcel build --target client --no-cache && cp _redirects build/client/_redirects",
    "build:server": "parcel build --target server --no-cache",
    "test": "mocha",
    "clean": "rm -r .parcel-cache build",
    "dev-clean": "npm run clean & npm run dev",
    "type-check": "tsc --pretty --noEmit"
  },
  "engines": {
    "node": "18.13.0"
  },
  "type": "commonjs",
  "targets": {
    "client": {
      "context": "browser",
      "source": "./src/client/public/index.html",
      "distDir": "./build/client",
      "engines": {
        "browsers": ">= 50%"
      }
    },
    "server": {
      "outputFormat": "commonjs",
      "context": "node",
      "source": "./src/server/index.js",
      "sourceMap": false,
      "distDir": "./build/server"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkdras/middle.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kkdras/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/kkdras/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.4.1",
    "@parcel/transformer-sass": "^2.8.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "express": "^4.18.2",
    "jsdom": "^21.1.1",
    "mocha": "^10.2.0",
    "parcel": "^2.4.1",
    "postcss": "^8.4.21",
    "postcss-modules": "^4.3.1",
    "process": "^0.11.10",
    "proxyquire": "^2.1.3",
    "sinon": "^15.0.3",
    "stylelint": "^14.16.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "handlebars": "^4.7.7",
    "uuid": "^9.0.0"
  },
  "@parcel/transformer-css": {
    "global": true,
    "cssModules": {
      "dashedIdents": true,
      "pattern": "[local]-[hash]"
    }
  },
  "@parcel/transformer-js": {
    "inlineFS": false,
    "inlineEnvironment": true
  }
}
